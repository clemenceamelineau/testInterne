<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="di_relation_tree" model="ir.ui.view">
        <field name="name">di.relation.tree</field>
        <field name="model">di.relation</field>        
        <field name="arch" type="xml">
            <tree string="Relation" import="true" editable="bottom" create="true">
                <field name="customer_id"/>
                <field name="partner_id"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    
    <record id="di_relation_form" model="ir.ui.view">
        <field name="name">di.relation.form</field>
        <field name="model">di.relation</field>
        <field name="arch" type="xml">
            <form string="Relation">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id" placeholder="Training file"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                    </group>
                </sheet>               
            </form>
        </field>
    </record>
    
    <record id="action_di_relation" model="ir.actions.act_window">
        <field name="name">Relation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">di.relation</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>